# Maintainer: Radu
pkgname=anaconda-installer
_tag="anaconda-39.11-1"
pkgver="39.11"
pkgrel=1
arch=("x86_64")
url=https://github.com/rhinstaller/anaconda
license=('GPL')
groups=()
depends=("python3" "python-pip" "python-gobject" "python-pid" "python-blivet" "python-pykickstart" "python-requests" "python-requests-file" "python-requests-ftp")
makedepends=("base-devel" "pv")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+$url#tag=${_tag}")
noextract=()
sha256sums=('SKIP')
validpgpkeys=()

prepare() {
	pip install polib pocketlint
	cd $srcdir/anaconda
	./autogen.sh
	./configure
}

build() {
	cd $srcdir/anaconda
	make release
}

package() {
	cd $srcdir/anaconda
	mkdir -v tmp || true
	mkdir -vp $pkgdir/opt/anaconda
	pv anaconda-$pkgver.tar.bz2 | tar -xj -C tmp
	cd tmp/anaconda-$pkgver
	cp -r * $pkgdir/opt/anaconda
}
